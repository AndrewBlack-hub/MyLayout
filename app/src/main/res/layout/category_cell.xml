<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_category_ic"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:background="@drawable/border_radius_img_view_not_selected"
        android:scaleType="centerInside"
        android:src="@drawable/ic_category_phones_grey"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toTopOf="@id/tv_category_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@id/iv_category_ic"
        app:layout_constraintEnd_toEndOf="@id/iv_category_ic"
        app:layout_constraintTop_toBottomOf="@id/iv_category_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/mark_pro"
        android:text="@string/category_phones"
        android:textColor="@color/main_text_and_menu_color"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>