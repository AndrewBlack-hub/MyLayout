<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_category_base"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="23dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/tv_category_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_category_ellipse"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="23dp"
        android:background="@drawable/border_radius_img_view_not_selected"
        app:layout_constraintBottom_toTopOf="@id/tv_category_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_category_ellipse_selected"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="23dp"
        android:background="@drawable/border_radius_img_view_selected"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tv_category_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_category_ic_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/ic_category_phones_grey"
        app:layout_constraintBottom_toBottomOf="@id/iv_category_ellipse"
        app:layout_constraintEnd_toEndOf="@id/iv_category_ellipse"
        app:layout_constraintStart_toStartOf="@id/iv_category_ellipse"
        app:layout_constraintTop_toTopOf="@id/iv_category_ellipse" />

    <ImageView
        android:id="@+id/iv_category_ic_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/ic_category_phones_white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_category_ellipse"
        app:layout_constraintEnd_toEndOf="@id/iv_category_ellipse"
        app:layout_constraintStart_toStartOf="@id/iv_category_ellipse"
        app:layout_constraintTop_toTopOf="@id/iv_category_ellipse" />

    <TextView
        android:id="@+id/tv_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/mark_pro"
        android:text="@string/category_phones"
        style="@style/font_500_dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_category_base"
        app:layout_constraintStart_toStartOf="@id/iv_category_base"
        app:layout_constraintTop_toBottomOf="@id/iv_category_base" />

</androidx.constraintlayout.widget.ConstraintLayout>